<div class="row large-4">
  <h1>Edit Article</h1>
  <%= form_for @blog, method: "put" do |blog| %>
    <%= blog.label :title %>
    <%= blog.text_field :title, value: @blog.title %>
    <%= blog.label :article %>
    <%= blog.text_field :article, value: @blog.article %>
    <%= blog.submit "Save" %>
  <% end %>
</div>
