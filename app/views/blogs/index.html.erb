<div class="container">
  <div class="row large-8">
    <h1>RECENT NEWS</h1>
    <div class="box">
    <% @blogs.each do |b| %>
      <h4><%= b.title %></h4>
      <p><%= b.article %></p>
      <p>Posted: <%= b.created_at.strftime("%b %d, %Y") %></p>
      <% if user_signed_in? %>
        <div>
          <%= button_to "Edit", edit_blog_path(b.id), :method => "get", action: "edit", :class => "small radius button left" %>
          <%= button_to "Delete", blog_path(b.id), :method => "delete", :confirm => "Are you sure?", :class => "small radius button" %>
        </div>
      <% end %>
      <hr>
    <% end %>
    <%= will_paginate @blogs %>
    </div>
  </div>
</div>
