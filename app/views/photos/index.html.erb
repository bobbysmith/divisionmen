<div class="container photo-page">
  <div class="row">
    <div class="box small-12 medium-9 large-9 clearfix">
    <h2>PHOTOS</h2>
    <h4 style="text-align: center;">Under Construction</h4>
      <div class="photos clearfix">
        <% @photos.each do |p| %>
        <span class="image"><a href=""><img src="<%= p.url %>" alt=""></a></span>
        <% if user_signed_in? %>
          <div>
            <%= button_to "Edit", edit_photo_path(p.id), :method => "get", action: "edit", :class => "tiny radius button left" %>
            <%= button_to "Delete", photo_path(p.id), :method => "delete", data: {confirm: "Are you sure?"}, :class => "tiny radius button left" %>
          </div>
        <% end %>
        <!-- <hr> -->
        <% end %>
      </div>
    </div>
  </div>
</div>

